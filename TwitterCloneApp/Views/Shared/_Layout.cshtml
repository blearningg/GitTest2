<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Test TwiterCloseApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Test Twiter Clone Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Profile", "Details", "People")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-sm-2">
                <div class="container leftnav">

                    <div class="row">
                        Follow
                    </div>

                    @using (Html.BeginForm("Search", "People", FormMethod.Post))
                    {
                        <div class="row">
                            <input id="searchUser" name="searchUser" placeholder="search people" class="form-control" />
                        </div>
                        <div class="row floatright" style="margin-top:5px;">
                           <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    }
                    
                   
                    <div class="row leftnavbottom">
                        <label id="lbltweetCount" class="label label-primary">@Session["TotalTweets"].ToString()</label> Tweets
                    </div>
                    <div class="row">
                        <label id="lblFolloings" class="label label-primary">@Session["FollowingCount"].ToString()</label> Follwings
                    </div>
                    <div class="row">
                        <label id="lblFollowers" class="label label-primary">@Session["FollowersCount"].ToString()</label> Followers
                    </div>
                </div>

            </div>
            <div class="col-sm-10">
                <div class="container padding">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
